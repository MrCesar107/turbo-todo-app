{
  "name": "turbo-todo-app",
  "version": "1.0.0",
  "scripts": {
    "build": "esbuild src/index.js --bundle --outfile=dist/bundle.js",
    "build:css": "postcss styles/input.css -o dist/styles.css",
    "dev": "concurrently \"npm:watch:*\"",
    "watch:js": "esbuild src/index.js --bundle --outfile=dist/bundle.js --watch",
    "watch:css": "postcss styles/input.css -o dist/styles.css --watch"
  },
  "devDependencies": {
    "@hotwired/stimulus": "^3.2.2",
    "@tailwindcss/postcss": "^4.1.7",
    "autoprefixer": "^10.4.14",
    "concurrently": "^8.2.2",
    "esbuild": "^0.20.2",
    "postcss": "^8.4.31",
    "postcss-cli": "^11.0.1",
    "tailwindcss": "^4.1.7"
  }
}
